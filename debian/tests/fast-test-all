#!/bin/bash 
set -e

#
# Tests that can lock up some kernels or are CPU / arch specific, so exclude them for now
#
EXCLUDE="sysfs procfs rdrand numa quota apparmor cpu-online kcmp copy-file"
#
# Get built-in stressor names
#
STRESSORS=$(stress-ng --help | grep "\-ops " | awk '{print $1}' | sed 's/--//' | sed 's/-ops//g')
rc=0

not_exclude()
{
	for x in $2
	do
		if [ $x == $1 ]
		then
			return 1
		fi
	done
	return 0
}

for s in ${STRESSORS}
do
	if not_exclude $s "$EXCLUDE"
	then
		stress-ng -v -t 1 --${s} 4 2>&1
		if [ $? -ne 0 ]
		then
			echo "$s FAILED"
			rc=1
		else
			echo "$s PASSED"
		fi
	fi
done

exit $rc
